.__mpx_modal__
  display none
  &.show
    display block
  .__mpx_mask__
    position fixed
    z-index 1000
    top 0
    right 0
    left 0
    bottom 0
    background rgba(0,0,0,0.6)
  .__mpx_modal_box__
    position fixed
    top 50%
    left 50%
    z-index 3000
    overflow hidden
    width 80%
    max-width 300px
    text-align center
    line-height 1.6
    background #FFFFFF
    padding-top 20px
    border-radius 15px
    transform translate(-50%, -50%)
    .__mpx_modal_title__
      font-size 18px
      padding 0 20px
    .__mpx_modal_content__
      font-size 17px
      line-height 1.6
      color #808080
      padding 10px 20px 0
      word-break break-all
      max-height 45vh
      overflow-y auto
      letter-spacing 1px
    .__mpx_modal_btns__
      position relative
      display flex
      line-height 48px
      font-size 18px
      margin-top 25px
      font-weight 500
      &::before
        content ""
        position absolute
        left 0
        top 0
        transform-origin 0 0
        width 100%
        border-top 1px solid rgba(0,0,0,0.2)
        @media (min-resolution: 2dppx)
          width 200%
          transform scale(.5)
        @media (min-resolution: 3dppx)
          width 300%
          transform scale(.333)
    .__mpx_modal_cancel__
      flex 1
      &.hide
        display none
    .__mpx_modal_confirm__
      flex 1
